<?xml version="1.0"?>
<robot name="axis_marker">
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
    </inertial>

    <!-- X axis - Red -->
    <visual name="x_axis">
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.01 0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
      </material>
    </visual>

    <!-- Y axis - Green -->
    <visual name="y_axis">
      <origin xyz="0 0.05 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.1 0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>

    <!-- Z axis - Blue -->
    <visual name="z_axis">
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>
</robot>
